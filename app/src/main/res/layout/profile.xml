<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/mainProfile"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.AppBarOverlay">


    <android.support.v7.widget.Toolbar
        android:id="@+id/profileToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:titleTextColor="@color/colorWhite"
        android:background="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/fotoProfile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/profileToolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnrefreshData"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/fotoProfile"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/btn_normal"
        android:text="Refresh"
        android:textColor="#ffffff"
        android:textSize="13dp" />

    <Button
        android:id="@+id/btngantifoto"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/fotoProfile"
        android:layout_gravity="center"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_toStartOf="@+id/btneditData"
        android:layout_toLeftOf="@+id/btneditData"
        android:layout_toEndOf="@+id/btnrefreshData"
        android:layout_toRightOf="@+id/btnrefreshData"
        android:background="@drawable/btn_normal"
        android:text="Ganti Foto"
        android:textColor="#ffffff"
        android:textSize="13dp" />

    <Button
        android:id="@+id/btneditData"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_below="@id/fotoProfile"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/btncustom"
        android:text="Edit Data"
        android:textColor="#ffffff"
        android:textSize="13dp" />

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btneditData"
        android:layout_marginTop="5dp"
        app:tabTextColor="#000000">

        <android.support.design.widget.TabItem
            android:id="@+id/tab_datasiswa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Siswa"
            android:textColor="#000000" />

        <android.support.design.widget.TabItem
            android:id="@+id/tab_dataortu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Ortu / Wali"
            android:textColor="#000000" />
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:layout_below="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_pager">

    </android.support.v4.view.ViewPager>


</RelativeLayout>