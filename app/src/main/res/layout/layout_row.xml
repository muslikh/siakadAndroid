  <android.support.v7.widget.CardView android:layout_marginBottom="8dp" app:cardCornerRadius="5dp" app:cardElevation="3dp" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_height="wrap_content" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">


    -

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    -

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true">

        <TextView
            android:id="@+id/nisn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nisn" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nisn"
            android:text="nama" />

        <TextView
            android:id="@+id/tahunmasuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama"
            android:text="tahun masuk" />

        <TextView
            android:id="@+id/jurusan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tahunmasuk"
            android:text="jurusan" />


      </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>