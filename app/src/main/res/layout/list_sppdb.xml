<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


        <TableRow

            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="5dp">
        >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textColor="#000000"
                    android:id="@+id/noun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:text="No Ujian Nasional"
                    android:textSize="14sp" />
                <TextView
                    android:textColor="#000000"
                    android:id="@+id/nisns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:text="nisn siswa"
                    android:textSize="14sp" />
                <TextView
                    android:textColor="#000000"
                    android:id="@+id/namass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:text="nama siswa"
                    android:textSize="14sp" />
                <TextView
                    android:textColor="#000000"
                    android:id="@+id/kodekelass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:text="Kelas"
                    android:textSize="14sp" />
                <TextView
                    android:textColor="#000000"
                    android:id="@+id/kodejurusans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:text="jurusan"
                    android:textSize="14sp"/>
            </LinearLayout>
        </TableRow>

    <TableRow

        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="5dp"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="15dp"

            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/validSbaru"

                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btncustom"
                android:gravity="center"
                android:text="Validasi"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/hapusSbaru"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btncustomred"
                android:text=" Hapus "
                android:textAlignment="center"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
<!--            <CheckBox-->
<!--                android:id="@+id/pilih"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Tandai"-->
<!--                />-->

</TableRow>
</RelativeLayout>