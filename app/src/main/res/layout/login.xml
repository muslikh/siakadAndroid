<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:gravity="center"
    tools:context=".Login">

    <LinearLayout
        android:id="@+id/loginAtas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="174dp"
            android:layout_height="128dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            app:srcCompat="@mipmap/ic_smk" />

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_marginBottom="5dp"
            android:text="Aplikasi Kesiswaan"
            android:textAlignment="center"
            android:textSize="24dp"
            android:textStyle="bold"
            app:fontFamily="monospace" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginAtas"
        android:background="@drawable/round_bg"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Username"
            android:textSize="16dp"
            android:textStyle="bold"
            app:fontFamily="monospace" />


        <EditText
            android:id="@+id/txt_username"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:inputType="textPersonName"
            app:fontFamily="monospace" />

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Password"
            android:textSize="16dp"
            android:textStyle="bold"
            app:fontFamily="monospace" />

        <EditText
            android:id="@+id/txt_password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:inputType="textPassword"
            app:fontFamily="monospace" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            tools:layout_marginRight="15dp">


            <CheckBox
                android:id="@+id/lihatpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="1dp"
                android:text="Lihat Password" />

            <TextView
                android:id="@+id/btn_lupaPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="1dp"
                android:text="Lupa Password ??"
                android:textColor="@android:color/holo_red_dark"
                app:fontFamily="monospace" />

        </LinearLayout>


        <Button

            android:id="@+id/btn_login"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_normal"
            android:text="Masuk"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            app:fontFamily="monospace" />


        <Button

            android:id="@+id/btn_isiFormulir"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btncustom"
            android:text=" Isi Formulir Pendaftaran"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            app:fontFamily="monospace" />

        <Button

            android:id="@+id/daftarUlang"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btncustomred"
            android:text=" Hasil Seleksi "
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            app:fontFamily="monospace" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/loginbawah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:text="Copyright Â© 2020 Muhammad Muslikh"
            android:textAlignment="center" />
    </LinearLayout>

</RelativeLayout>
